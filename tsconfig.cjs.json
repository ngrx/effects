{
  "version": "2.0.0",
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./release",
    "target": "es5",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "moduleResolution": "node",
    "declaration": true,
    "module": "commonjs",
    "lib": ["es5", "dom", "es2015"]
  },
  "include": [
    "src/**/*"
  ],
  "angularCompilerOptions": {
    "genDir": ".ngc"
  }
}
