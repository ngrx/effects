{
  "version": "2.0.0",
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./release/lib",
    "target": "es5",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "moduleResolution": "node",
    "declaration": true,
    "module": "es2015",
    "lib": ["es5", "dom", "es2015"]
  },
  "exclude": [
    "node_modules",
    "spec",
    "typings",
    "release"
  ],
  "angularCompilerOptions": {
    "genDir": ".ngc"
  }
}
